    "url": "https://github.com/kadoshita/revealjs-controller/issues"
  },
  "homepage": "https://github.com/kadoshita/revealjs-controller#readme",
  "dependencies": {
    "@types/node": "^12.7.1",
    "@types/reveal": "^3.3.33",
    "skyway-js": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0"
  }
