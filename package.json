{
  "name": "revealjs-controller",
  "version": "1.0.0",
  "description": "reveal.jsを遠隔操作するプログラム",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && browserify --transform babelify --outfile dist/RevealJSController.js src/RevealJSController.js",
    "watch": "tsc -w src/",
    "babel": "./node_modules/.bin/babel ./src/RevealJSController.js --out-dir dist/",
    "browserify": "browserify --transform babelify --outfile dist/index.js src/RevealJSController.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadoshita/revealjs-controller.git"
  },
